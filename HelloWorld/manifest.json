{
  "manifest_version": 2,
  "name": "Krishjs Extension",
  "description": "The application for Kendo usage.",
  "version": "0.1.0",
  "icons": {
                "16":"images/icon.png",
                "48":"images/icon.png",
                "128":"images/icon.png"
   },
  "background": {
   "scripts": ["Scripts/background.js"]
 },
  "content_scripts": [
   {
     "matches": ["http://*/*", "https://*/*"]
     "js": ["Scripts/contentscript.js"],
     "run_at": "document_end"
   }
 ],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "webNavigation",
    "<all_urls>"
  ]
}
